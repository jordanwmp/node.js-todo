<h2>ALL TASKS</h2>
<ul class="task-list">
    {{#each tasks}}
        <li>
            
            {{#if this.done}}
                <a href="/edit-task/{{this.id}}" class="title done">{{this.title}}</a>
            {{else}}
                <a href="/edit-task/{{this.edit}}" class="title">{{this.title}}</a>
            {{/if}}

            <span class="actions">

                <form action="/update-status" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}"/>
                    <input type="hidden" name="done" value="{{this.done}}"/>
                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>

                <a href="/edit-task/{{this.id}}">
                    <i class="bi bi-pencil-square"></i>
                </a>    

                <form action="/remove-task" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}"/>
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>

            </span>

        </li>
    {{/each}}
</ul>